{
  "compilerOptions": {
    "target": "es2019",
    "module": "esnext",
    "lib": ["esnext", "dom"],
    "outDir": "./lib/",
    "sourceMap": true,
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "plugins": [
      {
        "name": "typescript-tslint-plugin"
      }
    ]
  },
  "include": ["src", "typings"]
}
